{
  "name": "lrama",
  "displayName": "Lrama",
  "description": "Lrama syntax highlighting, snippets, and language server.",
  "version": "1.0.0",
  "publisher": "ydah",
  "repository": {
    "type": "git",
    "url": "https://github.com/ydah/lrama-for-vscode"
  },
  "bugs": "https://github.com/ydah/lrama-for-vscode/issues",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Language Protocol Server"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lrama",
        "aliases": [
          "lrama",
          "Lrama",
          "yacc",
          "bison"
        ],
        "extensions": [
          ".y",
          ".yacc",
          ".yy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lrama",
        "scopeName": "source.yacc",
        "path": "./syntaxes/lrama.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lrama",
        "path": "./snippets/lrama.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lrama",
      "properties": {
        "lrama.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./esbuild.js",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
